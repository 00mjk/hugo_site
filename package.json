{
  "name": "hugo_site",
  "description": "This is the repository from which the [Hugo](https://gohugo.io)-generated version of [brycewray.com](https://brycewray.com) is built.",
  "private": true,
  "scripts": {
    "clean": "rm -rf public",
    "start": "NODE_ENV=development npm-run-all clean --parallel dev:*",
    "build": "NODE_ENV=production npm-run-all clean --parallel prod:*",
    "testbuild": "NODE_ENV=production npm-run-all clean --parallel testbuild:*",
    "dev:wmFetch": "node -r dotenv/config assets/js/webmentions.js",
    "dev:hugo": "hugo server --port 3000 --bind=0.0.0.0 --baseURL=http://192.168.254.10:3000 --buildFuture --panicOnWarning --disableFastRender --forceSyncStatic --gc",
    "prod:wmFetch": "node assets/js/webmentions.js",
    "prod:hugo": "hugo --gc --minify",
    "testbuild:wmFetch": "node -r dotenv/config assets/js/webmentions.js",
    "testbuild:hugo": "hugo server --port 3000 --bind=0.0.0.0 --baseURL=http://192.168.254.10:3000 --verbose --gc --minify -e production"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "dotenv": "^16.0.1",
    "md5": "^2.3.0",
    "node-fetch": "^3.2.4",
    "npm-run-all": "^4.1.5"
  }
}
