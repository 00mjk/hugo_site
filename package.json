{
  "name": "hugo_site",
  "description": "This is the repository from which the [Hugo](https://gohugo.io)-generated version of [brycewray.com](https://www.brycewray.com) is built.",
  "main": "index.js",
  "scripts": {
    "clean": "rimraf public",
    "PS-sass": "sass --no-source-map themes/npm-sass/assets/scss/_fonts_PublicSans.scss themes/npm-sass/assets/css/fonts_PublicSans.css",
    "Inter-sass": "sass --no-source-map themes/npm-sass/assets/scss/_fonts_Inter.scss themes/npm-sass/assets/css/fonts_Inter.css",
    "InterFix-sass": "sass --no-source-map themes/npm-sass/assets/scss/_intervf.scss themes/npm-sass/assets/css/intervf.css",
    "sass-to-css": "sass --no-source-map themes/npm-sass/assets/scss/index.scss themes/npm-sass/assets/css/index.css",
    "start": "NODE_ENV=development npm-run-all clean PS-sass --parallel dev:*",
    "build": "NODE_ENV=production npm-run-all clean PS-sass sass-to-css prod:hugo",
    "dev:sass": "npm run sass-to-css -- --watch",
    "dev:hugo": "hugo server",
    "prod:hugo": "hugo --gc --minify"
  },
  "keywords": [],
  "license": "MIT",
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.7",
    "postcss-cli": "^9.1.0",
    "postcss-import": "^14.0.2",
    "rimraf": "^3.0.2",
    "sass": "^1.49.9",
    "tailwindcss": "^3.0.23",
    "tailwindcss-logical": "^3.0.0"
  }
}
