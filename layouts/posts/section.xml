{{- $pctx := . -}}
{{- if .IsHome -}}
	{{ $pctx = .Site }}
{{- end -}}
{{- $pages := slice -}}
{{- if or $.IsHome $.IsSection -}}
	{{- $pages = $pctx.RegularPages -}}
{{- else -}}
	{{- $pages = $pctx.Pages -}}
{{- end -}}
{{- $limit := .Site.Config.Services.RSS.Limit -}}
{{- if ge $limit 1 -}}
	{{- $pages = $pages | first $limit -}}
{{- end -}}
{{- printf "<?xml version=\"1.0\" encoding=\"utf-8\" standalone=\"yes\"?>" | safeHTML }}
<feed xmlns="http://www.w3.org/2005/Atom" xml:lang="{{ .Site.LanguageCode }}">
	<title>{{ .Site.Params.Domain }}</title>
	<subtitle>{{ .Site.Params.Description }}</subtitle>
	<link href="{{ .Site.BaseURL }}index.xml" rel="self" />
	<link href="{{ .Site.BaseURL }}" />
	<icon>https://www.brycewray.com/images/icons/favicon-96x96.png</icon>
	<logo>https://www.brycewray.com/images/icons/favicon-96x96.png</logo>
	<updated>{{ .Date.Format "2006-01-02T15:04:05-07:00" | safeHTML }}</updated>
	<id>{{ .Site.BaseURL }}</id>
	<author>
		<name>{{ .Site.Params.Author }}</name>
		<email>{{ .Site.Params.AuthorEmail }}</email>
	</author>
	{{- $RSSutm := "?utm_campaign=RSS&utm_source=RSS&utm_medium=RSS" -}}
	{{- $PermaWithRSSutm := "" -}}
	{{ range $pages }}
		{{- $PermaWithRSSutm = print .Permalink $RSSutm -}}
		{{- $titleThis := .Title | .Page.RenderString -}}
		{{- $emailReplyHTML := print `<p><a href="mailto:bw@brycewray.com?subject=“` $titleThis `”">Reply via email</a></p>`  -}}
		{{- $descrForFeed := "[No description]" -}}
		{{- if .Description -}}
			{{- $descrForFeed = .Description -}}
		{{- end -}}
		{{- $excerpt := "" -}}
		{{- if .Summary -}}
			{{- $excerpt = (.Summary | .Page.RenderString) -}}
		{{- end -}}
		{{- $getFullFeed := `<hr><p><em>To get posts’ <strong>full</strong> content in your reader, you can subscribe to <a href="https://www.brycewray.com/index.xml">this feed</a>.</em></p>` -}}
		{{- $finalHTMLContent := print $descrForFeed `<hr />` $excerpt $getFullFeed -}}
		<entry>
			<title>{{ $titleThis }}</title>
			<link href="{{ $PermaWithRSSutm }}" />
			<updated>{{ .Date.Format "2006-01-02T15:04:05-07:00" }}</updated>
			<id>{{ .Permalink }}</id>
			<summary>{{ $descrForFeed }}</summary>
			<content xml:lang="{{ .Site.LanguageCode }}" type="html">{{ $finalHTMLContent | html }}</content>
		</entry>
	{{ end }}
</feed>
