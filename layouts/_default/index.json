{{- $pctx := . -}}
{{- if .IsHome -}}
	{{ $pctx = .Site }}
{{- end -}}
{{- $pages := $pctx.RegularPages -}}
{{- $limit := .Site.Config.Services.RSS.Limit -}}
{{- if ge $limit 1 -}}
	{{- $pages = $pages | first $limit -}}
{{- end -}}
{{ $length := (len $pages) -}}
{
  "version": "https://jsonfeed.org/version/1.1",
  "title": "{{ .Site.Title }}",
  "description": "{{ .Site.Params.Description }}",
  "home_page_url": "{{ .Site.BaseURL }}",
  {{ with .OutputFormats.Get "JSON" -}}
	  "feed_url": "{{ .Permalink }}",
  {{ end -}}
  {{ with .Site.LanguageCode -}}
	  "language": "{{ . }}",
  {{ end -}}
  {{ with $.Param "icon" -}}
	  "icon": "{{ . | absURL }}",
  {{ end -}}
  {{ with $.Param "favicon" -}}
	  "favicon": "{{ . | absURL }}",
  {{ end -}}
  {{ with .Site.Author.name -}}
		"authors": [
			{
				"name": "{{ . }}"{{ with $.Site.Author.url }},
				"url": "{{ . }}"{{ end }}{{ with $.Site.Author.avatar }},
				"avatar": "{{ . | absURL }}"{{ end }}
			}
		],
  {{ end -}}
  {{- /* https://www.brycewray.com/?utm_campaign=JSON&utm_source=JSON&utm_medium=JSON */ -}}
  {{- $JSONutm := "?utm_campaign=JSON&utm_source=JSON&utm_medium=JSON"  -}}
  {{- $PermaWithJSONutm := "" -}}
  "items": [
    {{ range $index, $element := $pages -}}
			{{- $emailReplyHTML := print `<p><a href="mailto:bw@brycewray.com?subject=“` .Title `”">Reply via email</a></p>` -}}
			{{- $emailReplyHTML := $emailReplyHTML -}}
			{{- $contentHTML := print .Content $emailReplyHTML -}}
			{{- $PermaWithJSONutm = print .Permalink $JSONutm -}}
			{
				"title": {{ .Title | jsonify }},
				"date_published": "{{ .Date.Format "2006-01-02T15:04:05Z07:00" }}",
				"id": "{{ .Permalink }}",
				"url": "{{ $PermaWithJSONutm }}",
				{{ with .Params.author -}}
				"authors": [
					{
						"name": "{{ . }}"
					}
				],
				{{ end -}}
				"summary": {{ .Description | jsonify -}},
				"content_html": {{ $contentHTML | jsonify -}}
			}{{ if ne (add $index 1) $length }},{{ end }}
    {{ end -}}
  ]
}
